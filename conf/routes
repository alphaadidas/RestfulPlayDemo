# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                    controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)

GET         /v1/customers/:id                               @controllers.CustomerController.get(id)
PUT         /v1/customers/:id                               @controllers.CustomerController.update(id)
DELETE      /v1/customers/:id                               @controllers.CustomerController.delete(id)
#GET         /v1/customers/:id/possibleDuplicates            @controllers.CustomerController.findDuplicates()

POST        /v1/customers                                   @controllers.CustomerController.save()
#GET         /v1/customers?filter=duplicatesExist            @controllers.CustomerController.find()


