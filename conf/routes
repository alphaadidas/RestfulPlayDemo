#PUT     /v1/customers/:id/merge/:id1,:id2,:id3,:id4
#PUT     /v1/customers/:id/merge #-d ' ["id1","id2","id3"] '
#PUT     /v1/customers/:id/mergeLeft/:id1,:id2,:id3,:id4
#PUT     /v1/customers/:id/mergeRight/:id

